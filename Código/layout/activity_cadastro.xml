<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <Button
        android:id="@+id/id_BotaoCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/botao_cadastro"
        android:textColor="#272727"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_SenhaCadastro"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/id_SenhaCadastro"
        app:layout_constraintTop_toBottomOf="@+id/id_SenhaCadastro"
        app:layout_constraintVertical_bias="0.116" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logologin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logologin" />

    <EditText
        android:id="@+id/id_NomeCadastro"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="@string/campo_nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/id_EmailCadastro"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/campo_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/id_SobrenomeCadastro"
        app:layout_constraintStart_toStartOf="@+id/id_SobrenomeCadastro"
        app:layout_constraintTop_toBottomOf="@+id/id_SobrenomeCadastro" />

    <EditText
        android:id="@+id/id_SenhaCadastro"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/campo_senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/id_EmailCadastro"
        app:layout_constraintStart_toStartOf="@+id/id_EmailCadastro"
        app:layout_constraintTop_toBottomOf="@+id/id_EmailCadastro" />

    <EditText
        android:id="@+id/id_SobrenomeCadastro"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/campo_sobrenome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/id_NomeCadastro"
        app:layout_constraintStart_toStartOf="@+id/id_NomeCadastro"
        app:layout_constraintTop_toBottomOf="@+id/id_NomeCadastro" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CE993E"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/toolbar_cabecalho" />

</android.support.constraint.ConstraintLayout>
